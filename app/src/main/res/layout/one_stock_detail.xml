<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:id="@+id/id_one_stock_detail_pages_tile">
        <Button android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="分时线"
                android:id="@+id/id_one_stock_detail_time_line"/>
        <Button android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="日K线"
                android:background="@android:color/white"
                android:id="@+id/id_one_stock_detail_day_line"/>
        <Button android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="周K线"
                android:background="@android:color/white"
                android:id="@+id/id_one_stock_detail_week_line"/>
        <Button android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="月K线"
                android:background="@android:color/white"
                android:id="@+id/id_one_stock_detail_month_line"/>

    </LinearLayout>

    <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/id_one_stock_detail_pages"/>

</LinearLayout>
